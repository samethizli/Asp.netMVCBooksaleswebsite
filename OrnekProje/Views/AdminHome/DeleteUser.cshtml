
@{
    ViewBag.Title = "DeleteUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model KitapHayalim.Identity.ApplicationUser

<h2>Gerçekten bu üyeyi silmek istiyor musun?</h2>

<div class="user-details">
    <dl>
        <dt>Username:</dt>
        <dd>@Model.UserName</dd>
    </dl>
    <dl>
        <dt>First Name:</dt>
        <dd>@Model.Name</dd>
    </dl>
    <dl>
        <dt>Last Name:</dt>
        <dd>@Model.Surname</dd>
    </dl>
    <dl>
        <dt>Email:</dt>
        <dd>@Model.Email</dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <input type="submit" value="Sil" class="btn btn-danger" />
    </div>
}